{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",
    "paths": {
      "@/buttons/*": [
        "components/atoms/buttons/*"
      ],
      "@/boxes/*": [
        "components/atoms/boxes/*"
      ],
      "@/inputs/*": [
        "components/atoms/inputs/*"
      ],
      "@/logos/*": [
        "components/atoms/logos/*"
      ],
      "@/resources/*": [
        "components/atoms/resources/*"
      ],
      "@/contents/*": [
        "components/atoms/contents/*"
      ],
      "@/molecules/*": [
        "components/molecules/*"
      ],
      "@/organisms/*": [
        "components/organisms/*"
      ],
      "@/icons/*": [
        "assets/icons/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.svg"
  ],
  "exclude": [
    "node_modules"
  ]
}
